            {*@

                    @using (Html.BeginForm())
                    {
                        <table class="table-user">
                            <tr>
                                <th>Username</th>
                                <td>@Html.TextBoxFor(model => model.User, new { disabled = "disabled", @Value = (string)@ViewBag.Username }) </td>
                            </tr>
                            <tr>
                                <th>PC / IP :: Local</th>
                                <td>@Html.TextBoxFor(model => model.Host, new { disabled = "disabled", @Value = (string)@ViewBag.Hostname }) / @Html.TextBoxFor(model => model.IP, new { disabled = "disabled", @Value = (string)@ViewBag.IP }) ::  @Html.TextBoxFor(model => model.Location, new { disabled = "disabled", @Value = (string)@ViewBag.Location })</td>

                            </tr>
                            <tr>
                                <th>Data/Hora</th>
                                <td>@Html.TextBoxFor(model => model.Date, new { disabled = "disabled", @Value = @ViewBag.Date })</td>
                            </tr>
                        </table>
                        <p></p>
                        <fieldset>
                            <legend>Assistência Técnica</legend>
                            <table>
                                <tr>
                                    <th>@Html.RadioButtonFor(model => model.Report, "IN")</th>
                                    <td>Reportar um Problema</td>
                                </tr>
                                <tr>
                                    <th>@Html.RadioButtonFor(model => model.Report, "CH", new { required = "required" })</th>
                                    <td>Solicitar Alteração/Criação</td>
                                </tr>
                            </table>
                        </fieldset>


                        //Reportar um Problema

                        //Solicitar Alteração/Criação
                        <p class="table-title">Descrição</p>
                        @Html.TextAreaFor(model => model.Description, new { cols = "20", rows = "4", maxlength = "150", required = "required" })
                        <br />
                        <button type="submit" id="SaveTicket" class="btnsend">ENVIAR</button>
                        <p></p>



                    }
                </div>
               <!-- <div id="rightcolumn">
                    <p class="table-title">Notificações</p>
                    <div>
                        @ViewBag.Notifications
                    </div>
                </div>
                <div class"clear"></div>-->

            </div>
            <div id="Ticketsabertos">
                <p class="table-title">Tickets Abertos</p>

            </div>
            <div id="Ticketsfechados">
                <p class="table-title">Tickets Fechados</p>

            </div>
            <div id="result">

            </div>
            
            <div id="AdminMenu">

                <div id="AdminTickets">
                    <p class="table-title">Tickets Abertos</p>
                    <div id="Adminresult">

                    </div>
                </div>
            </div>
        </div>
    
    </section>
}


