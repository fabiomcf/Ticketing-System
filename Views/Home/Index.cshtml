@model Cloud_Tickets.Models.Computer
@{
    ViewBag.Title = "HelpDesk";
}
@section featured {

    <section class="featured">
        <div class="content-wrapper">
            @*<hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>*@
     
            <div id="indexform">
                <div id="leftcolumn">
                    <p class="table-title">Detalhes do Utilizador</p>
